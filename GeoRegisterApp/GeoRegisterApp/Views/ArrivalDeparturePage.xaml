<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoRegisterApp.Views.ArrivalDeparturePage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                FontSize="Large"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center">
                <Label.Text>Pasirinkite&#10;ar atvykstate ar išvykstate</Label.Text>
            </Label>

            <Button Text="Atvykau"
                    BorderRadius="50"
                    BorderWidth="2"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="OnArrivalButtonClicked" 
                    BackgroundColor="LimeGreen"
                    TextColor="White"/>
            <Button Text="Išvykstu"
                    BorderRadius="50"
                    BorderWidth="2"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="OnDepartureButtonClicked" 
                    BackgroundColor="Crimson"
                    TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>